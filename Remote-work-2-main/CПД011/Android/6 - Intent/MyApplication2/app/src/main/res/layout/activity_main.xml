<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increment!"
       android:id="@+id/btn_one"
        android:layout_below="@id/btn_four"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Second Activity"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_one"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send message"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_two"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter subject mail"
        android:layout_margin="10dp"
        android:id="@+id/edit_subject"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text mail"
        android:layout_below="@id/edit_subject"
        android:layout_margin="10dp"
        android:lines="8"
        android:gravity="top|left"
        android:id="@+id/edit_text"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send message in TG"
        android:textAllCaps="false"
        android:id="@+id/btn_four"
        android:layout_below="@id/edit_text"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_baseline_mic_24"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_rec"/>

</RelativeLayout>