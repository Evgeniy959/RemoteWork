@{ 
    ViewData["Title"] = "Index";
}

@model IEnumerable<Movie>




<div class="container p-3">
    <h1 class="text-center">Movie search</h1>
    <form method="get" action="/Home/Search" class="input-group p-2 mb-3">
        <input required type="text" name="title" class="form-control" placeholder="Recipient's movie" aria-label="Recipient's movie" aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
    </form>
    <hr />


    @if (@Model.Count()>0)
    {
        <h1>Recent Movies</h1>
    <div class="row">
        @foreach (Movie item in @Model)
        {
              <div class="col-3">
                    <partial name="_MovieCardPartial" model="@item"></partial>
                </div>
        }

    </div>
    }
    
</div>
