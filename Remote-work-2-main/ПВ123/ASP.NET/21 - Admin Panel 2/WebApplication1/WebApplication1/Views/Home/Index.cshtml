@{
    ViewData["Title"] = "Home Page";
}
@model HomeIndexViewModel //IEnumerable<Post>



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

@if (TempData.ContainsKey("Status"))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Notification!</strong>@TempData["Status"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="row">
    <!-- Blog entries-->
    <div class="col-lg-8">
        <!-- Featured blog post-->
        <div class="card mb-4">
            <a href="#!"><img class="card-img-top"  src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" alt="..." /></a>
            <div class="card-body">
                <div class="small text-muted">January 1, 2023</div>
                <h2 class="card-title">Featured Post Title</h2>
                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>
                <a class="btn btn-primary" href="#!">Read more →</a>
            </div>
        </div>
        <p>Count posts : @Model.CountPosts</p>
        <!-- Nested row for non-featured blog posts-->
        <div class="row">
            @foreach (var item in Model.Posts)
                {
            <div class="col-4">
                <!-- Blog post-->
                

                    <div class="card mb-3">
                        <a href="#!"><img class="card-img-top" onerror="this.src='/uploads/placeholder.png'"  src="@item.ImageUrl" alt="..." /></a>
                        <div class="card-body">
                            <div class="small text-muted">@item.Date.ToString()</div>
                            <h2 class="card-title h4">@item.Title</h2>
                            <p class="card-text">@item.Content</p>

                            <p class="card-text">@item.Category.Name</p>

                            <small>Tags : </small>
                          @foreach (var tag in @item.PostTags)
                          {
                                <small style="width:max-content;height:35px" class="btn btn-info">@tag.Tag.Name</small>
                          }
                          <hr />

                     @*       <a class="btn btn-primary" href="#!">Read more →</a>
                            <a class="btn btn-primary" href="#!">Read more →</a>
                            <a class="btn btn-primary" href="#!">Read more →</a>*@


                                <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary m-1">Detail</a>
            <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</a>
            <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-secondary m-1"> Edit </a>
                        </div>
                    </div>
                    
                </div>  }
              
        </div>
        <!-- Pagination-->

        <vc:pagination
        current-page="@Model.CurentPages"
        total-pages="@Model.TotalPages"
        action="Index"
        route-param="@Model.RouteParam"
       
        controller="Home" >

        </vc:pagination>
 @*route-param="new{ { "categoryId", '@Model.CategoryId' }, {'tagId', '@Model.TagId' }, { 'page', '@Model.CurentPages' } }"*@


        @*<nav aria-label="Pagination">
            <hr class="my-0" />
            <ul class="pagination justify-content-center my-4">
                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                <li class="page-item"><a class="page-link" href="#!">2</a></li>
                <li class="page-item"><a class="page-link" href="#!">3</a></li>
                <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                <li class="page-item"><a class="page-link" href="#!">15</a></li>
                <li class="page-item"><a class="page-link" href="#!">Older</a></li>
            </ul>*@
        </nav>
    </div>
    <!-- Side widgets-->
    <div class="col-lg-4">
        <!-- Search widget-->
        <div class="card mb-4">
            <div class="card-header">Search</div>
            <div class="card-body">
                <form class="input-group">
                    <input asp-action="Index" asp-controller="Home" method="post" name="search" class="form-control" type="text" placeholder="Enter search term..." aria-label="Enter search term..." aria-describedby="button-search" />
                    <button class="btn btn-primary" id="button-search" type="submit">Go!</button>
                </form>
            </div>
        </div>
        <!-- Categories widget-->
        <div class="card mb-4">
            <div class="card-header">Categories</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <ul class="list-unstyled mb-0">
                            @for (var i = 0; i <  Math.Ceiling(@Model.Categories.Count()/2.0); i++)
                            {
                                  <li><a  class="@(Model.CategoryId==Model.Categories.ToList()[i].Id ? "text-danger" : "")"  asp-action="Index" asp-controller="Home" asp-route-categoryId="@Model.Categories.ToList()[i].Id">@Model.Categories.ToList()[i].Name</a></li>   
                            }
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul class="list-unstyled mb-0">
                            @for (int i = (int)Math.Ceiling(@Model.Categories.Count()/2.0); i <  @Model.Categories.Count(); i++)
                            {
                                   <li><a   class="@(Model.CategoryId==Model.Categories.ToList()[i].Id ? "text-danger" : "")" asp-action="Index" asp-controller="Home" asp-route-categoryId="@Model.Categories.ToList()[i].Id">@Model.Categories.ToList()[i].Name</a></li>     
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Tag widget-->
        <div class="card mb-4">
            <div class="card-header">Tags</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <ul class="list-unstyled mb-0">
                            @for (var i = 0; i <  Math.Ceiling(@Model.Tags.Count()/2.0); i++)
                            {
                                  <li><a class="@(Model.TagId==Model.Tags.ToList()[i].Id ? "text-danger" : "")" asp-action="Index" asp-controller="Home" asp-route-tagId="@Model.Tags.ToList()[i].Id">@Model.Tags.ToList()[i].Name</a></li>   
                            }
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul class="list-unstyled mb-0">
                            @for (int i = (int)Math.Ceiling(@Model.Tags.Count()/2.0); i <  @Model.Tags.Count(); i++)
                            {
                                   <li><a class="@(Model.TagId==Model.Tags.ToList()[i].Id ? "text-danger" : "")"  asp-action="Index" asp-controller="Home" asp-route-tagId="@Model.Tags.ToList()[i].Id">@Model.Tags.ToList()[i].Name</a></li>     
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Side widget-->
        <div class="card mb-4"> 
           <a asp-action="Index" asp-controller="Home" class="btn btn-primary w-100" >Reset Filtr</a>
        </div>
    </div>
</div>


    


@section Scripts{
    <script>
        setTimeout (()=>{
            console.log("Good");
            $('.alert').hide();
        },5000);


        $('img').on('error',function(){
            $(this).src = './uploads/placeholder.png';
            console.log('Image');
        })
    </script>
}
