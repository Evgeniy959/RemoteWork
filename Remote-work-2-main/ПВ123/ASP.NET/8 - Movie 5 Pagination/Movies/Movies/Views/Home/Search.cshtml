@using Movies.Models

@{
    ViewData["Title"] = "Search";
}
@model SearchViewModel


@if (!string.IsNullOrWhiteSpace(@Model.Title) && !Model.Response.Equals("False"))
{
    <h1>Search results by title: @Model.Title  (Count : @Model.TotalResults )</h1>
    <p>Total pages : @Model.TotalPages</p>




    <div class="container">
        <div class="row">
            @foreach (Movie item in @Model.Movies)
            {
                <div class="col-3">
                    <partial name="_MovieCardPartial" model="@item"></partial>
                </div>
            }
        </div>

        <br>
        <hr>

        <nav aria-label="Page navigation example">
            <ul class="pagination">

                @if (@Model.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Search" asp-route-page="@(Model.CurrentPage-1)" asp-route-title="@Model.Title">Previous</a></li>

                }

                @*   @for (var i = 0; i < @ViewBag.TotalPages; i++)
            {
            @if (ViewBag.CurrentPage==(i+1))
            {
            <li class="page-item active"><a class="page-link" asp-controller="Home" asp-action="Search" asp-route-page="@(i+1)" asp-route-title="@ViewBag.MovieTitle">@(i+1)</a></li>

            }else{
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Search" asp-route-page="@(i+1)" asp-route-title="@ViewBag.MovieTitle">@(i+1)</a></li>

            }
            }*@

                @*       @for (var i = 1; i <= @ViewBag.TotalPages; i++)
            {
            @if (ViewBag.CurrentPage==i)
            {
            <li class="page-item active"><a class="page-link" asp-controller="Home" asp-action="Search" asp-route-page="@i" asp-route-title="@ViewBag.MovieTitle">@i</a></li>

            }else{
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Search" asp-route-page="@i" asp-route-title="@ViewBag.MovieTitle">@i</a></li>

            }
            }*@

                @for (var i = 1; i <= @Model.TotalPages; i++)
                {

                        <li class="page-item @(Model.CurrentPage==i?"active":"")"><a class="page-link" asp-controller="Home" asp-action="Search" asp-route-page="@i" asp-route-title="@Model.Title">@i</a></li>

                }

                @if (@Model.CurrentPage < @Model.TotalPages)
                {
                    <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Search" asp-route-page="@(Model.CurrentPage+1)" asp-route-title="@Model.Title">Next</a></li>

                }


            </ul>
        </nav>
    </div>



}
else
{
    <h3>No results!</h3>
}
