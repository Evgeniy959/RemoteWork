

@model Movie

<div class="card">
    <div class="img-container">
        <div class="img-blur" style="background-image:url(@Model.Poster)"></div>
         <img src="@Model.Poster" onerror="event.target.src='/images/placeholder.png'" class="card-img-top" alt="...">
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Year</p>

        @if (@Model.Plot == null)
        {
               @* <a class="btn btn-primary" asp-controller="Home" asp-action="Detail" asp-route-idS="@Model.imdbID">Detail</a>*@
        
             @* <movie-details movie="@Model"></movie-details>*@
              <a modal-type="Full"  movie="@Model"></a>
              <a modal-type="Modal"  movie="@Model" data-open-modal id="myBtnA"></a>
        }
    </div>
</div>
